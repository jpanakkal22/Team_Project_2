<div class="container mt-2">
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6 pullup">
            <div class="card  border-primary p-2 bg-light mb-3">
            <div class="card-header text-center">
                <h1 class="p-2">Pullup Challenge</h1>
                <p class="text-info">Please fill in this form to add your challenge.</p>
            </div>
            <div class="card-body">
                <form class="pullup-form" action="/api/pullup" method="POST">
                    <div class="form-group row">
                        <label for="id-input" class="col-sm-4 col-form-label"></label>
                        <div class="col-sm-8">
                            <input type="hidden" class="form-control" id="id-input" value="">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="pullup-input" class="col-sm-4 col-form-label"></label>
                        <div class="col-sm-8">
                            <input type="hidden" class="form-control" id="pullup-input" value="pullup">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="pullup-goal" class="col-sm-4 col-form-label">Goals</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="pullup-goal" name= "goal">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="pullup-duration" class="col-sm-4 col-form-label">Duration on (minutes)</label>
                        <div class="col-sm-8">
                            <input type="number" class="form-control" id="pullup-duration" name= "duration" placeholder="10">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="pullup-reps" class="col-sm-4 col-form-label">Reps</label>
                        <div class="col-sm-8">
                            <input type="number" class="form-control" id="pullup-reps" name= "reps" placeholder="10">
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-10">
                            <button type="submit" class="btn btn-success">Add Challenge</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

