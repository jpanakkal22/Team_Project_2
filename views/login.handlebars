<div class="container">
    <div class="row">
        <div class="col-md-2 welcome lead">Welcome to Build&Flex</div>
        <div class="col-md-6"></div>
        <div class="col-md-4 logIn">
            <div class="card specialCard bg-light mb-3 shadow-lg">
                <div class="card-header">
                    <h1 class="text-center">Log In!</h1>
                    <p class="textYellow text-center">Don't have an account? <a class="textYellow" href="/signup"
                            style="text-decoration:underline">Click Here</a> to sign up!</p>
                </div>
                <div class="card-body">
                    <form class="login needs-validation" novalidate action="/api/login" method="POST">
                        <div class="form-group">
                            <label for="emailInput">Email address</label>
                            <input type="email" name="email" class="form-control" id="emailInput"
                                aria-describedby="emailHelp" required>
                            <div class="invalid-feedback">
                                You must enter a valid email address.
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="passwordInput">Password</label>
                            <input type="password" name="password" class="form-control" id="passwordInput" required>
                            <div class="invalid-feedback">
                                Please check your password and try again.
                            </div>
                        </div>
                        <div class="row justify-content-center">
                            <button type="submit" class="btn btn-warning">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>